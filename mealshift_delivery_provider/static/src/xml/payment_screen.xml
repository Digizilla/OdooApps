<?xml version="1.0" encoding="UTF-8"?>

<templates id="template" xml:space="preserve">

    <t t-name="mealshift_delivery_method.PaymentScreenButtons" t-inherit="point_of_sale.PaymentScreenButtons" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('payment-buttons')]" position="inside">

            <h4 class="title-category pt-3 pb-2 px-3 m-0 bg-view border-bottom border-2">Delivery method</h4>
            <t t-foreach="delivery_methods" t-as="deliveryMethod" t-key="deliveryMethod.id">
                <button class="button delivery-button btn btn-light py-3 text-start rounded-0 border-bottom"
                    t-att-class="{ 'highlight text-bg-primary': this.deliveryButtonClass(deliveryMethod.id, deliveryMethod.name) }"
                    t-on-click="() => this.addDeliveryMethod(deliveryMethod.id, deliveryMethod.name)"
                    t-att-disabled="this.deliveryButtonAbility(deliveryMethod.id, deliveryMethod.name)">
                    <i class="fa fa-bus me-2" role="img" title="Delivery" />
                    <span class="delivery-name" t-esc="state.delivery_methods_info[deliveryMethod.name + '_' + deliveryMethod.id].displayed_name"/>
                </button>
            </t>
        </xpath>
    </t>
</templates>
